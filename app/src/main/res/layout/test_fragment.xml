    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/hls"
        android:text="HLS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/progressive"
        android:text="PROGRESSIVE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/dash"
        android:text="DASH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>